/**index.wxss**/
.userinfo{
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
}
.login, .userinfo-avatar{
    background: #f1f1f1;
    border: 0;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    font-size: 24rpx;
    padding: 0;
    line-height: 120rpx;
    margin: 0;
    display: block;
}
.operation{
    position: absolute;
    width: 300rpx;
    height: 200rpx;
}
.box{
    background: #000;
    height: 1200rpx;
    width: 600rpx;
    position: relative;
    overflow: hidden;
}
.lattice{
    position: absolute;
    top: 0;
    left: 0;
    width: 50px;
    height: 50px;
    background: #ff00ff;
}
.arrow{
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto 20rpx;
}
.arrow-down{
   display: block;
}
.switch{
    margin: 0 26rpx 20rpx;
}